@model WebFamilyHome.Models.User

@{
    ViewData["Title"] = "Deletar Usuário";
}

<h2>Deletar Usuário</h2>

<h3>Tem certeza que deseja excluir este usuário?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome Completo</dt>
        <dd class="col-sm-10">@Model.NomeCompleto</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Usuário</dt>
        <dd class="col-sm-10">@Model.UserName</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

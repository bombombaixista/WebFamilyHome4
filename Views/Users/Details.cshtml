@model WebFamilyHome.Models.User

@{
    ViewData["Title"] = "Detalhes do Usuário";
}

<h2>Detalhes do Usuário</h2>

<dl class="row">
    <dt class="col-sm-2">Nome Completo</dt>
    <dd class="col-sm-10">@Model.NomeCompleto</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Usuário</dt>
    <dd class="col-sm-10">@Model.UserName</dd>

    <dt class="col-sm-2">Grupo</dt>
    <dd class="col-sm-10">@Model.GroupId</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>

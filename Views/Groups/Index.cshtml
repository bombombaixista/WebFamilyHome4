@model IEnumerable<WebFamilyHome.Models.Group>

<h1>Grupos</h1>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Usuários</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Name</td>
                <td>@group.Users.Count()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@group.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@group.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Novo Grupo</a>
